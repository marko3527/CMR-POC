{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "dist/main.js",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/main/webapp/app/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
